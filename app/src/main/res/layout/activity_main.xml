<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ToggleButton
        android:id="@+id/tgb_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:textOff="start recording"
        android:textOn="stop recording"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:text="0 Hz"
        app:layout_constraintStart_toStartOf="@+id/tgb_record"
        app:layout_constraintTop_toBottomOf="@+id/tgb_record" />

    <TextView
        android:id="@+id/tv_Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:text="P"
        app:layout_constraintStart_toStartOf="@+id/tgb_record"
        app:layout_constraintTop_toBottomOf="@+id/tv_frequency" />
    <TextView
        android:id="@+id/tv_Info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:text="S"
        app:layout_constraintStart_toStartOf="@+id/tgb_record"
        app:layout_constraintTop_toBottomOf="@+id/tv_Info" />

    <TextView
        android:id="@+id/tv_Info3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="D"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tv_Info"
        app:layout_constraintTop_toBottomOf="@+id/tv_Info2" />

    <Button
        android:id="@+id/btn_choose_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose song"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tgb_record"
        app:layout_constraintStart_toEndOf="@+id/tgb_record"
        app:layout_constraintTop_toTopOf="@+id/tgb_record" />
</androidx.constraintlayout.widget.ConstraintLayout>